{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    
    // "baseUrl": "./src", // <-- Add this, tells TS the base directory for resolving paths
    //     "paths": { // <-- 'paths' (plural) and INSIDE compilerOptions
    //       "@/*": ["./*"] // <-- This now means "@/" maps to "./src/"
    // },
    "removeComments": true,
  },
  "include": ["src/**/*"], 
  "exclude": ["node_modules"]
}
